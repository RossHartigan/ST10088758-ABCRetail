@page
@model ABC_Retail.Pages.UploadMediaModel
@{
    ViewData["Title"] = "Upload Media";
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>

    <header>
        <h1>@ViewData["Title"]</h1>
        <nav>
            <ul>
                <li><a asp-page="/Index">Home</a></li>
                <li><a asp-page="/CustomerProfiles">Customer Profiles</a></li>
                <li><a asp-page="/ProductInformation">Product Information</a></li>
                <li><a asp-page="/UploadMedia">Upload Media</a></li>
                <li><a asp-page="/UploadFile">Upload File</a></li>
                <li><a asp-page="/UploadQueueMessage">Upload Queue</a></li>
            </ul>
        </nav>
    </header>

    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="Image">Select file:</label>
            <input type="file" id="Image" name="Image" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="ContainerName">Container Name:</label>
            <input type="text" id="ContainerName" name="ContainerName" class="form-control" value="product-images"
                readonly />
            <span asp-validation-for="ContainerName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Upload" class="btn btn-primary" />
        </div>
        @if (Model.UploadSuccess != null)
        {
            <div class="alert alert-success">
                @Model.UploadSuccess
            </div>
        }
        @if (Model.UploadError != null)
        {
            <div class="alert alert-danger">
                @Model.UploadError
            </div>
        }
    </form>

</body>

</html>
